Admin Login Status: <%=@is_admin %>

<% if @is_admin %>
    <%= form_tag('/admin/logout', method: "post") do %>
        <%= submit_tag("Logout") %>
    <% end %>
<% else %>
    <%= form_tag('/admin/login', method: "post") do %>
        <%= label_tag( "password:") %>
        <%= password_field_tag('password') %>
        <%= submit_tag("Login") %>
    <% end %>
<% end%>
